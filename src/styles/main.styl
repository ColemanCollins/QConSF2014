@import 'reset.css'
@import 'prism/themes/prism-tomorrow.css'
@import url(http://fonts.googleapis.com/css?family=Open\+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800);

//Bespoke Classes: https://github.com/markdalgleish/bespoke-classes

$background = #666
$slide-width = 1280px
$slide-height = 720px
$white = #F5F5F5

* 
  box-sizing: border-box
  margin: 0
  padding: 0

.bespoke-parent
  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0
  background: $background
  overflow: hidden

.bespoke-scale-parent
  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0
  pointer-events: none
  .bespoke-active
    pointer-events: auto

.bespoke-slide
  width: $slide-width
  height: $slide-height
  position: absolute
  top: 0
  left: 0
  font-family: 'Open Sans', sans serif
  padding: 50px
  color: $white
  
    h1
      font-weight: 800
      text-transform: uppercase
      font-size: 100px
      line-height: 90px
      width: 55%
      margin-bottom: 20px
    h2
      font-weight: 800
      text-transform: uppercase
      font-size: 60px
      line-height: 55px
    h3
      font-weight: 500
      font-size: 60px
      text-transform: uppercase
      color: #85CAD1
    h4
      font-weight: 500
      font-size: 32px
      &.secondary
        color: #ccc
        font-size: 28px
        margin-top: 150px
    .tweet-container
      width: 600px
    hr 
      border: none
      margin: 20px 0
    .netflix-image
      height: 600px
      width: auto
      margin-left: -40px
    .big-image
      height: 600px
      width: auto
    .medium-image
      height: 400px
      width: auto  
    .odd-numbers-blue 
      color: #f08d49
      .odd
        color: #85CAD1 !important
    pre
      background: $background !important
      padding: 1em
      code
        font-family: Consolas, Monaco, 'Andale Mono', monospace
        font-size: 24px
        padding: 0 1em
        display: block
        direction: ltr
        text-align: left
        white-space: pre
        word-spacing: normal
        word-break: normal
        line-height: 1.3 !important

        -moz-tab-size: 4
        -o-tab-size: 4
        tab-size: 4

        -webkit-hyphens: none
        -moz-hyphens: none
        -ms-hyphens: none
        hyphens: none
    &.obnoxious-comment pre code .token.comment
      color: #f0f !important
      font-weight: bold
      background: #0f0
      padding: 4px
    &.heuristic-slide
      background: darken(#85CAD1,20)
        

.bespoke-inactive
  opacity: 0
  pointer-events: none

.bespoke-bullet-inactive
  opacity: 0
  pointer-events: none

.bespoke-backdrop
  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0
  z-index: -1
  opacity: 0

.bespoke-backdrop-active
  opacity: 1

.bespoke-progress-parent
  position: absolute
  top: 0
  left: 0
  right: 0
  height: .3vw

.bespoke-progress-bar
  position: absolute
  height: 100%
  background: #ccc
  transition: width .6s ease

.emphatic
  background: #222 !important

.emphatic-text
  color: white
